{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "moduleResolution": "Bundler",

    "baseUrl": ".", // ★ 追加
    "paths": { "@/*": ["./*"] }, // ★ 追加（@ → apps/web 配下）

    "jsx": "preserve",
    "plugins": [{ "name": "next" }],
    "allowJs": true,
    "skipLibCheck": true,
    "incremental": true,
    "esModuleInterop": true,
    "isolatedModules": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
