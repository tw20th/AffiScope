{
  "siteId": "powerscope",
  "displayName": "PowerScope",
  "domain": "www.powerscope-lab.com",
  "brand": {
    "primary": "#0EA5E9",
    "accent": "#22C55E",
    "logoUrl": "/logos/powerscope.svg",
    "theme": "dark"
  },

  "analytics": {
    "ga4MeasurementId": "G-8P08C0VQE9"
  },
  "categoryPreset": ["portable-power", "solar-panel"],
  "homeCopy": {
    "title": "停電・キャンプ・在宅の“電気の不安”を解決する",
    "subtitle": "容量(Wh)・出力(W)・LFP安全性・ソーラー対応から、あなたに合うポータブル電源を毎日自動更新",
    "dataSourceLabel": "Amazon",
    "note": "本ページは広告を含みます",
    "featuredTitle": "悩み別おすすめ電源",
    "blogsTitle": "悩み解決ガイド"
  },
  "gsc": { "propertyUrl": "https://www.powerscope-lab.com/" },
  "defaultPersona": "防災を備えたい家庭",
  "painRules": [
    {
      "id": "blackout_home_backup",
      "label": "停電時の冷蔵庫や照明を動かしたい",
      "match": { "anyTags": ["大容量", "高出力", "UPS", "家庭用"] },
      "personas": ["防災を備えたい家庭"]
    },
    {
      "id": "camp_quiet_light",
      "label": "キャンプで静かに使いたい（夜間の静音）",
      "match": { "anyTags": ["静音", "小型軽量", "ソーラー対応"] },
      "personas": ["キャンプ"]
    },
    {
      "id": "workation_laptop",
      "label": "ノートPC・カメラを長時間運用したい",
      "match": { "anyTags": ["中容量", "急速充電", "PD対応"] },
      "personas": ["ワーケーション", "クリエイター"]
    },
    {
      "id": "safety_battery",
      "label": "発火が怖いので安全性重視（LFP/リン酸鉄）",
      "match": { "anyTags": ["LFP", "リン酸鉄"] },
      "personas": ["防災を備えたい家庭", "キャンプ"]
    },
    {
      "id": "best_value",
      "label": "予算を抑えつつ失敗したくない",
      "match": { "anyTags": ["コスパ重視"] },
      "personas": ["防災を備えたい家庭", "キャンプ", "ワーケーション"]
    }
  ],
  "productRules": {
    "categoryId": "portable-power",
    "includeKeywords": [
      "ポータブル電源",
      "バッテリー",
      "蓄電",
      "ソーラーパネル",
      "発電 (ソーラー)"
    ],
    "excludeKeywords": [
      "ガソリン",
      "エンジン発電機",
      "車用バッテリー単体",
      "モバイルバッテリー(小型)",
      "UPS単体装置(産業)",
      "インバーター基板",
      "DIYキット"
    ]
  },
  "affiliate": {
    "amazon": {
      "region": "jp",
      "marketplace": "www.amazon.co.jp",
      "partnerTag": "tw20th0c-22",
      "resources": [
        "Images.Primary.Large",
        "ItemInfo.Title",
        "ItemInfo.ByLineInfo",
        "ItemInfo.Features",
        "ItemInfo.ProductInfo",
        "Offers.Summaries.OfferCount",
        "Offers.Listings.Price",
        "Offers.Listings.MerchantInfo"
      ],
      "tps": 0.2,
      "burst": 1,
      "tpdMax": 3000,
      "refresh": { "offersMins": 180, "catalogHours": 24 }
    }
  },
  "features": { "blogs": true, "ranking": true },
  "seeds": { "asins": [] },
  "discovery": {
    "searchKeywords": [
      "ポータブル電源 1000Wh",
      "ポータブル電源 500Wh",
      "リン酸鉄 ポータブル電源",
      "ソーラーパネル 200W",
      "キャンプ 電源 静音",
      "停電 家庭 蓄電",
      "防災 電源 LFP",
      "急速充電 PD 100W 電源"
    ],
    "searchIndex": "Electronics",
    "maxPerRun": 25,
    "maxSearchItemPage": 5,
    "randomizePage": true,
    "relaxedOnFirstImport": true,
    "cooldownDays": 10,
    "minPrice": 15000,
    "maxPrice": 300000,
    "hotBoostRules": [
      { "type": "seed" },
      { "type": "keywordMatches", "pattern": "リン酸鉄|LFP|LiFePO4" },
      { "type": "keywordMatches", "pattern": "ソーラー|MPPT" },
      {
        "type": "keywordMatches",
        "pattern": "1000Wh|1500Wh|2000Wh|3000Wh|kWh"
      },
      { "type": "keywordMatches", "pattern": "1000W|1500W|2000W|3000W" },
      { "type": "priceBetween", "min": 30000, "max": 160000 }
    ]
  },
  "tagRules": [
    {
      "tag": "大容量",
      "any": [
        {
          "type": "featureMatches",
          "pattern": "(?:12|15|20|30)00\\s?Wh|\\b(?:1|1\\.5|2|3)kWh\\b"
        },
        { "type": "titleMatches", "pattern": "1000Wh|1500Wh|2000Wh|3000Wh|kWh" }
      ]
    },
    {
      "tag": "中容量",
      "any": [
        {
          "type": "featureMatches",
          "pattern": "500\\s?Wh|600\\s?Wh|700\\s?Wh|800\\s?Wh"
        },
        { "type": "titleMatches", "pattern": "500Wh|600Wh|700Wh|800Wh" }
      ]
    },
    {
      "tag": "高出力",
      "any": [
        { "type": "featureMatches", "pattern": "1000W|1500W|2000W|3000W" },
        { "type": "titleMatches", "pattern": "1000W|1500W|2000W|3000W" }
      ]
    },
    {
      "tag": "LFP",
      "any": [
        { "type": "featureMatches", "pattern": "リン酸鉄|LiFePO4|LFP" },
        { "type": "titleMatches", "pattern": "リン酸鉄|LiFePO4|LFP" }
      ]
    },
    {
      "tag": "ソーラー対応",
      "any": [
        { "type": "featureMatches", "pattern": "ソーラー|MPPT|PV" },
        { "type": "titleMatches", "pattern": "ソーラー|MPPT|PV" }
      ]
    },
    {
      "tag": "急速充電",
      "any": [
        { "type": "featureMatches", "pattern": "PD\\s?(60|100|140)W|急速充電" },
        { "type": "titleMatches", "pattern": "PD\\s?(60|100|140)W|急速充電" }
      ]
    },
    {
      "tag": "静音",
      "any": [
        { "type": "featureMatches", "pattern": "静音|低騒音" },
        { "type": "titleMatches", "pattern": "静音|低騒音" }
      ]
    },
    {
      "tag": "小型軽量",
      "any": [
        {
          "type": "featureMatches",
          "pattern": "(?:^|\\s)([0-4](?:\\.[0-9])?)\\s?kg"
        },
        { "type": "titleMatches", "pattern": "小型|軽量|コンパクト" }
      ]
    },
    {
      "tag": "UPS",
      "any": [
        { "type": "titleMatches", "pattern": "\\bUPS\\b|無停電" },
        { "type": "featureMatches", "pattern": "\\bUPS\\b|無停電" }
      ]
    },
    {
      "tag": "コスパ重視",
      "any": [
        { "type": "bestPriceLte", "value": 60000 },
        {
          "type": "all",
          "all": [
            { "type": "bestPriceLte", "value": 100000 },
            {
              "type": "or",
              "any": [
                { "type": "tagWillBe", "tag": "中容量" },
                { "type": "tagWillBe", "tag": "ソーラー対応" }
              ]
            }
          ]
        }
      ]
    }
  ],
  "contentPlan": {
    "daily": {
      "morningIntent": "price-drop",
      "noonIntent": "who-fit",
      "rewriteAt": "23:00",
      "rewriteMinScore": 85
    },
    "weekly": { "pillarIntent": "comparison", "weekday": "SU", "time": "09:00" }
  },
  "keywordPools": {
    "comparison": [
      "ポータブル電源 LFP 比較",
      "ポータブル電源 1000Wh 比較",
      "ソーラーパネル 200W 比較"
    ],
    "guide": [
      "停電に備える ポータブル電源 選び方",
      "キャンプ向け 静音 小型 ポータブル電源",
      "在宅ワーク 電源バックアップ ノートPC"
    ]
  },
  "createdAt": 0,
  "updatedAt": 0
}
