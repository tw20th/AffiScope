        { "type": "featureMatches", "pattern": "ランバー|腰(サポート)?" },
        { "type": "featureMatches", "pattern": "リクライニング|180度|135度" },
        { "type": "titleMatches", "pattern": "腰" }
      ]
    },
    {
      "tag": "姿勢改善",
      "any": [
        {
          "type": "featureMatches",
          "pattern": "姿勢|S字|アームレスト\\s?(3D|4D)|調整(肘|アーム)"
        },
        { "type": "titleMatches", "pattern": "姿勢|4D|アームレスト" }
      ]
    },
    {
      "tag": "蒸れ対策",
      "any": [
        { "type": "materialMatches", "pattern": "メッシュ|ファブリック" },
        { "type": "featureMatches", "pattern": "通気性|メッシュ" }
      ]
    },
    {
      "tag": "コスパ重視",
      "any": [
        { "type": "bestPriceLte", "value": 15000 },
        {
          "type": "all",
          "all": [
            { "type": "bestPriceLte", "value": 25000 },
            {
              "type": "or",
              "any": [
                { "type": "tagWillBe", "tag": "腰痛対策" },
                { "type": "tagWillBe", "tag": "蒸れ対策" }
              ]
            }
          ]
        }
      ]
    }
  ],
