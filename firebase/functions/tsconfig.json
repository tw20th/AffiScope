{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "src/scripts/normalizeProducts.mjs",
    "../../_archive/scheduledBlogMorning.ts",
    "../../_archive/scheduledBlogNoon.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
